<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('header') %>

    <div class="container">
      <div class="content">
        <% data.forEach(el => { %>
        <form class="sub-content" action="/add" method="post">
          <img src="/images/food.jpg" alt="food" />
          <!-- <input type="text" hidden value="10000" name="Gia" />
          <input type="text" hidden value="Ngon" name="Mota" /> -->
          <h2><%= el.title %></h2>
          <p><%= el.description %></p>
          <div class="footer-content">
            <p class="price">Giá: <%= el.price%>đ</p>
            <input
              type="number"
              name="soluong"
              class="amount"
              min="1"
              max="5"
              value="1"
            />
            <button class="add_to_cart" type="submit">Thêm vào giỏ hàng</button>
          </div>
        </form>
        <% }) %>
      </div>
    </div>
  </body>
</html>
